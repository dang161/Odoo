<odoo>
    <data>
        <record model="ir.actions.act_window" id="phapnhan">
            <field name="name">Pháp nhân</field>
            <field name="res_model">dispatchcom1</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Thêm mới
                </p>
            </field>
        </record>


        <record id="view_dispatch_com1_form" model="ir.ui.view">
            <field name="name">Pháp Nhân - công ty phái cử làm hồ sơ phía VN</field>
            <field name="model">dispatchcom1</field>
            <field name="arch" type="xml">
                <form string="Pháp Nhân - Chi tiết">
                    <table class="o_group">
                        <tbody>
                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="name_short"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="name_short"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="name"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="name"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="name_jp"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="name_jp"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="name_en"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="name_en"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="director"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="director" style="width:250px"/>
                                    </div>
                                </td>
                            </tr>


                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="position_director"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="position_director" style="width:250px"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="position_director_vi"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="position_director_vi" style="width:250px"/>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <table class="o_group">
                        <tbody>
                            <!--<tr>-->
                            <!--<td colspan="1" width="300px" class="columnDivider">-->
                            <!--<label for="address_jp" string="Địa chỉ"/>-->
                            <!--</td>-->
                            <!--<td colspan="1" width="350px">-->
                            <!--<div class="column">-->
                            <!--<field name="address_jp" placeholder="Tiếng Nhật"/>-->
                            <!--</div>-->
                            <!--</td>-->
                            <!--</tr>-->

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="address_en" string="Địa chỉ - Tiếng Anh"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="address_en" placeholder="Tiếng Anh"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="address_vi" string="Địa chỉ - Tiếng Việt"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="address_vi" placeholder="Tiếng Việt"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="phone_number"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="phone_number" style="width:100px"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="fax_number"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="fax_number" style="width:100px"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="date_create"/>
                                </td>
                                <td colspan="1" width="250px">
                                    <div>
                                        <field name="day_create" style="width: 45px; display: inline-block"
                                               placeholder="Ngày" widget="mask" data-inputmask-mask="99"
                                               class="oe_edit_only"/>
                                        <field name="month_create" style="width: 70px; display: inline-block"
                                               placeholder="Tháng" class="oe_edit_only"/>
                                        <field name="year_create" style="width:50px" placeholder="Năm"
                                               class="oe_edit_only" widget="mask" data-inputmask-mask="9999"/>
                                        <field name="date_create" class="oe_read_only"/>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="license_number"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="license_number" style="width:100px"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="number_of_employee"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="number_of_employee" style="width:100px"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="capital"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="capital"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="revenue"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="revenue"/>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="1" width="300px" class="columnDivider">
                                    <label for="mission"/>
                                </td>
                                <td colspan="1" width="350px">
                                    <div class="column">
                                        <field name="mission"/>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </form>
            </field>
        </record>
    </data>
</odoo>